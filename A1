<xml xmlns="https://developers.google.com/blockly/xml">
  <variables>
    <variable id="tick_count">tick_count</variable>
    <variable id="digit9_count">digit9_count</variable>
    <variable id="last_digit">last_digit</variable>
    <variable id="cooldown">cooldown</variable>
  </variables>

  <!-- ON TICK -->
  <block type="tick" x="20" y="20">
    <next>

      <!-- GET LAST DIGIT -->
      <block type="variables_set">
        <field name="VAR" id="last_digit">last_digit</field>
        <value name="VALUE">
          <block type="digit">
            <field name="DIGIT">LAST</field>
          </block>
        </value>
        <next>

          <!-- COUNT DIGIT 9 -->
          <block type="controls_if">
            <value name="IF0">
              <block type="logic_compare">
                <field name="OP">EQ</field>
                <value name="A">
                  <block type="variables_get">
                    <field name="VAR" id="last_digit">last_digit</field>
                  </block>
                </value>
                <value name="B">
                  <block type="math_number">
                    <field name="NUM">9</field>
                  </block>
                </value>
              </block>
            </value>
            <statement name="DO0">
              <block type="variables_set">
                <field name="VAR" id="digit9_count">digit9_count</field>
                <value name="VALUE">
                  <block type="math_arithmetic">
                    <field name="OP">ADD</field>
                    <value name="A">
                      <block type="variables_get">
                        <field name="VAR" id="digit9_count">digit9_count</field>
                      </block>
                    </value>
